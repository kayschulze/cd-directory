@{
  Layout = "_Layout";
}

<div class="container">
  <h1>CD Directory</h1>
  <h2>Where your CDs will always be remembered.</h2>

  <form action="/cds" method="post">
    <div class="form-group">
      <label for="albumtitle">Album Title: </label>
      <input type="text" class="form-control" id="albumtitle" name="albumtitle">
      <label for="artist">Artist: </label>
      <input type="text" class="form-control" id="artist" name="artist">
      <label for="year">Year: </label>
      <input type="text" class="form-control" id="year" name="year">
      <label for="comments">Comments:</label>
      <input type="text" class="form-control" id="comments" name="comments">
      <button type="submit" name="button">Enter</button>
    </div>
  </form>

  <a href="/cds"><button>View All CDs</button></a>
  <a href="/artists/add"><button>Add An Artist</button></a>
  <a href="/artists"><button>View All Artists</button></a>

</div>
